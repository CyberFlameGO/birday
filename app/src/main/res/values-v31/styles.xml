<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/animated_birday</item>
        <item name="android:windowSplashScreenAnimationDuration">1200</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/static_branding_image</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/goodGrayTotalTranslucent
        </item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Widget theme -->
    <style name="Theme.AppWidget.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>

    <!-- System accent theme, only supported on API 31+ -->
    <style name="AppTheme.System" parent="AppTheme">
        <item name="colorAccent">@android:color/system_accent1_400</item>
        <item name="colorPrimary">@android:color/system_accent1_400</item>
        <item name="colorSecondary">@android:color/system_accent1_400</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_800</item>
        <item name="colorSecondaryContainer">@android:color/system_accent1_800</item>
    </style>

</resources>